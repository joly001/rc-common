<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="userFollow">

	<!-- 用于select查询公用抽取的列 -->
	<sql id="userFollowColumns">
    	<if test="null!=userId">
    		AND USER_ID = #{userId}
    	</if>
    	<if test="null!=userFollowId">
    		AND USER_FOLLOW_ID = #{userFollowId}
    	</if>
	</sql>
	
	<sql id="userFollowSetColumns">
		    <if test="null!=userId">
		    USER_ID = #{userId},
		    </if>
		    <if test="null!=userFollowId">
		    USER_FOLLOW_ID = #{userFollowId},
		    </if>
	</sql>

	<resultMap id="userFollowResultMap" type="com.zcsoft.rc.user.model.entity.UserFollow">
        <result property="userId" column="USER_ID"/>
        <result property="userFollowId" column="USER_FOLLOW_ID"/>
	</resultMap>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert">
        INSERT INTO USER_FOLLOW (
        	USER_ID
        	,USER_FOLLOW_ID
        ) VALUES (
        	#{userId}
        	,#{userFollowId}
        )
	</insert>
	
	<delete id="deleteById">
	    DELETE FROM
	    	USER_FOLLOW 
	    WHERE
	    USER_ID = #{id}  AND 
	    USER_FOLLOW_ID = #{id} 
    </delete>
    
    <delete id="deleteByCondition">
	    DELETE FROM
	    	USER_FOLLOW 
	    WHERE
	    	1=1
		    <include refid="userFollowColumns" />
    </delete>
    
	<update id="updateById">
	    UPDATE
	    	USER_FOLLOW 
        <set>
	        <include refid="userFollowSetColumns" />
		</set>
	    WHERE
	    USER_ID = #{userId}  AND 
	    USER_FOLLOW_ID = #{userFollowId} 
	</update>
	
    <select id="queryById" resultMap="userFollowResultMap">
		SELECT
			USER_ID
			,USER_FOLLOW_ID
		FROM
			USER_FOLLOW 
		WHERE 
			USER_ID = #{id}  AND 
			USER_FOLLOW_ID = #{id} 
	</select>
	
	<select id="queryList" resultMap="userFollowResultMap">
		SELECT
			USER_ID
			,USER_FOLLOW_ID
		FROM
			USER_FOLLOW
		WHERE
			1=1
			<include refid="userFollowColumns" />
		ORDER BY
			USER_ID
			USER_FOLLOW_ID
	</select>
	
	<select id="queryAll" resultMap="userFollowResultMap">
		SELECT
			USER_ID
			,USER_FOLLOW_ID
		FROM
			USER_FOLLOW 
		ORDER BY
			USER_ID
			USER_FOLLOW_ID
	</select>
	
	<select id="queryPaginationListCount" resultType="Integer">
		SELECT
			COUNT(0)
		FROM
			USER_FOLLOW 
		<where>
			<include refid="userFollowColumns" />
		</where>
	</select>
	
	<select id="queryPaginationList" parameterType="PaginationCondition" resultMap="userFollowResultMap">
		SELECT
			USER_ID
			,USER_FOLLOW_ID
		FROM
			USER_FOLLOW
		<where>
			<include refid="userFollowColumns" />
		</where>
		ORDER BY
			USER_ID
			USER_FOLLOW_ID
	</select>
	
</mapper>

