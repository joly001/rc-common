<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="role">

	<!-- 用于select查询公用抽取的列 -->
	<sql id="roleColumns">
    	<if test="null!=id">
    		AND ID = #{id}
    	</if>
    	<if test="null!=roleName">
    		AND ROLE_NAME = #{roleName}
    	</if>
    	<if test="null!=roleDesc">
    		AND ROLE_DESC = #{roleDesc}
    	</if>
    	<if test="null!=roleType">
    		AND ROLE_TYPE = #{roleType}
    	</if>
    	<if test="null!=createTime">
    		AND CREATE_TIME = #{createTime}
    	</if>
    	<if test="null!=modifyTime">
    		AND MODIFY_TIME = #{modifyTime}
    	</if>
	</sql>
	
	<sql id="roleSetColumns">
		    <if test="null!=id">
		    ID = #{id},
		    </if>
		    <if test="null!=roleName">
		    ROLE_NAME = #{roleName},
		    </if>
		    <if test="null!=roleDesc">
		    ROLE_DESC = #{roleDesc},
		    </if>
		    <if test="null!=roleType">
		    ROLE_TYPE = #{roleType},
		    </if>
		    <if test="null!=createTime">
		    CREATE_TIME = #{createTime},
		    </if>
		    <if test="null!=modifyTime">
		    MODIFY_TIME = #{modifyTime},
		    </if>
	</sql>

	<resultMap id="roleResultMap" type="com.zcsoft.rc.user.model.entity.Role">
        <result property="id" column="ID"/>
        <result property="roleName" column="ROLE_NAME"/>
        <result property="roleDesc" column="ROLE_DESC"/>
        <result property="roleType" column="ROLE_TYPE"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="modifyTime" column="MODIFY_TIME"/>
	</resultMap>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert">
        INSERT INTO ROLE (
        	ID
        	,ROLE_NAME
        	,ROLE_DESC
        	,ROLE_TYPE
        	,CREATE_TIME
        	,MODIFY_TIME
        ) VALUES (
        	#{id}
        	,#{roleName}
        	,#{roleDesc}
        	,#{roleType}
        	,#{createTime}
        	,#{modifyTime}
        )
	</insert>
	
	<delete id="deleteById">
	    DELETE FROM
	    	ROLE 
	    WHERE
	    ID = #{id} 
    </delete>
    
    <delete id="deleteByCondition">
	    DELETE FROM
	    	ROLE 
	    WHERE
	    	1=1
		    <include refid="roleColumns" />
    </delete>
    
	<update id="updateById">
	    UPDATE
	    	ROLE 
        <set>
	        <include refid="roleSetColumns" />
		</set>
	    WHERE
	    ID = #{id} 
	</update>
	
    <select id="queryById" resultMap="roleResultMap">
		SELECT
			ID
			,ROLE_NAME
			,ROLE_DESC
			,ROLE_TYPE
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			ROLE 
		WHERE 
			ID = #{id} 
	</select>
	
	<select id="queryList" resultMap="roleResultMap">
		SELECT
			ID
			,ROLE_NAME
			,ROLE_DESC
			,ROLE_TYPE
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			ROLE
		WHERE
			1=1
			<include refid="roleColumns" />
		ORDER BY
			ID
	</select>
	
	<select id="queryAll" resultMap="roleResultMap">
		SELECT
			ID
			,ROLE_NAME
			,ROLE_DESC
			,ROLE_TYPE
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			ROLE 
		ORDER BY
			ID
	</select>
	
	<select id="queryPaginationListCount" resultType="Integer">
		SELECT
			COUNT(0)
		FROM
			ROLE 
		WHERE
			1=1 
			<include refid="roleColumns" />
	</select>
	
	<select id="queryPaginationList" parameterType="PaginationCondition" resultMap="roleResultMap">
		SELECT
			ID
			,ROLE_NAME
			,ROLE_DESC
			,ROLE_TYPE
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			ROLE
		WHERE
			1=1
			<include refid="roleColumns" />
		ORDER BY
			ID
	</select>
	
</mapper>

