<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="machinery">

	<!-- 用于select查询公用抽取的列 -->
	<sql id="machineryColumns">
    	<if test="null!=id">
    		AND ID = #{id}
    	</if>
    	<if test="null!=plateNumber">
    		AND PLATE_NUMBER = #{plateNumber}
    	</if>
    	<if test="null!=machineryName">
    		AND MACHINERY_NAME = #{machineryName}
    	</if>
    	<if test="null!=machineryType">
    		AND MACHINERY_TYPE = #{machineryType}
    	</if>
    	<if test="null!=userId">
    		AND USER_ID = #{userId}
    	</if>
    	<if test="null!=nick">
    		AND NICK = #{nick}
    	</if>
    	<if test="null!=mobile">
    		AND MOBILE = #{mobile}
    	</if>
    	<if test="null!=workRadius">
    		AND WORK_RADIUS = #{workRadius}
    	</if>
    	<if test="null!=wristStrapCode">
    		AND WRIST_STRAP_CODE = #{wristStrapCode}
    	</if>
    	<if test="null!=createTime">
    		AND CREATE_TIME = #{createTime}
    	</if>
    	<if test="null!=modifyTime">
    		AND MODIFY_TIME = #{modifyTime}
    	</if>
	</sql>
	
	<sql id="machinerySetColumns">
		    <if test="null!=id">
		    ID = #{id},
		    </if>
		    <if test="null!=plateNumber">
		    PLATE_NUMBER = #{plateNumber},
		    </if>
		    <if test="null!=machineryName">
		    MACHINERY_NAME = #{machineryName},
		    </if>
		    <if test="null!=machineryType">
		    MACHINERY_TYPE = #{machineryType},
		    </if>
		    <if test="null!=userId">
		    USER_ID = #{userId},
		    </if>
		    <if test="null!=nick">
		    NICK = #{nick},
		    </if>
		    <if test="null!=mobile">
		    MOBILE = #{mobile},
		    </if>
		    <if test="null!=workRadius">
		    WORK_RADIUS = #{workRadius},
		    </if>
		    <if test="null!=wristStrapCode">
		    WRIST_STRAP_CODE = #{wristStrapCode},
		    </if>
		    <if test="null!=createTime">
		    CREATE_TIME = #{createTime},
		    </if>
		    <if test="null!=modifyTime">
		    MODIFY_TIME = #{modifyTime},
		    </if>
	</sql>

	<resultMap id="machineryResultMap" type="com.zcsoft.rc.machinery.model.entity.Machinery">
        <result property="id" column="ID"/>
        <result property="plateNumber" column="PLATE_NUMBER"/>
        <result property="machineryName" column="MACHINERY_NAME"/>
        <result property="machineryType" column="MACHINERY_TYPE"/>
        <result property="userId" column="USER_ID"/>
        <result property="nick" column="NICK"/>
        <result property="mobile" column="MOBILE"/>
        <result property="workRadius" column="WORK_RADIUS"/>
        <result property="wristStrapCode" column="WRIST_STRAP_CODE"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="modifyTime" column="MODIFY_TIME"/>
	</resultMap>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert">
        INSERT INTO MACHINERY (
        	ID
        	,PLATE_NUMBER
        	,MACHINERY_NAME
        	,MACHINERY_TYPE
        	,USER_ID
        	,NICK
        	,MOBILE
        	,WORK_RADIUS
        	,WRIST_STRAP_CODE
        	,CREATE_TIME
        	,MODIFY_TIME
        ) VALUES (
        	#{id}
        	,#{plateNumber}
        	,#{machineryName}
        	,#{machineryType}
        	,#{userId}
        	,#{nick}
        	,#{mobile}
        	,#{workRadius}
        	,#{wristStrapCode}
        	,#{createTime}
        	,#{modifyTime}
        )
	</insert>
	
	<delete id="deleteById">
	    DELETE FROM
	    	MACHINERY 
	    WHERE
	    ID = #{id} 
    </delete>
    
    <delete id="deleteByCondition">
	    DELETE FROM
	    	MACHINERY 
	    WHERE
	    	1=1
		    <include refid="machineryColumns" />
    </delete>
    
	<update id="updateById">
	    UPDATE
	    	MACHINERY 
        <set>
	        <include refid="machinerySetColumns" />
		</set>
	    WHERE
	    ID = #{id} 
	</update>
	
    <select id="queryById" resultMap="machineryResultMap">
		SELECT
			ID
			,PLATE_NUMBER
			,MACHINERY_NAME
			,MACHINERY_TYPE
			,USER_ID
			,NICK
			,MOBILE
			,WORK_RADIUS
			,WRIST_STRAP_CODE
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			MACHINERY 
		WHERE 
			ID = #{id} 
	</select>
	
	<select id="queryList" resultMap="machineryResultMap">
		SELECT
			ID
			,PLATE_NUMBER
			,MACHINERY_NAME
			,MACHINERY_TYPE
			,USER_ID
			,NICK
			,MOBILE
			,WORK_RADIUS
			,WRIST_STRAP_CODE
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			MACHINERY
		WHERE
			1=1
			<include refid="machineryColumns" />
		ORDER BY
			ID
	</select>
	
	<select id="queryAll" resultMap="machineryResultMap">
		SELECT
			ID
			,PLATE_NUMBER
			,MACHINERY_NAME
			,MACHINERY_TYPE
			,USER_ID
			,NICK
			,MOBILE
			,WORK_RADIUS
			,WRIST_STRAP_CODE
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			MACHINERY 
		ORDER BY
			ID
	</select>
	
	<select id="queryPaginationListCount" resultType="Integer">
		SELECT
			COUNT(0)
		FROM
			MACHINERY
		<where>
			<if test="null!=machineryName">
				AND MACHINERY_NAME LIKE #{machineryName}"%"
			</if>
			<if test="null!=wristStrapCode">
				AND WRIST_STRAP_CODE LIKE #{wristStrapCode}"%"
			</if>
			<if test="null!=nick">
				AND NICK LIKE #{nick}"%"
			</if>
		</where>
	</select>
	
	<select id="queryPaginationList" parameterType="PaginationCondition" resultMap="machineryResultMap">
		SELECT
			ID
			,PLATE_NUMBER
			,MACHINERY_NAME
			,MACHINERY_TYPE
			,USER_ID
			,NICK
			,MOBILE
			,WORK_RADIUS
			,WRIST_STRAP_CODE
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			MACHINERY
		<where>
			<if test="null!=machineryName">
				OR MACHINERY_NAME LIKE #{machineryName}"%"
			</if>
			<if test="null!=wristStrapCode">
				OR WRIST_STRAP_CODE LIKE #{wristStrapCode}"%"
			</if>
			<if test="null!=nick">
				OR NICK LIKE #{nick}"%"
			</if>
		</where>
		ORDER BY
			CREATE_TIME DESC
	</select>
	
</mapper>

